{%- render 'stylesheet', name: 'product-grid' -%}

<main class="product-grid-section">
    <div class="container">
        <h2 class="product-grid-section__title">{{- collection.title | upcase }} COLLECTION</h2>
        <div class="product-grid">
            {% paginate collection.products by 12 %}
                {% for product in collection.products %}
                    {% render 'product-card', product_card: product %}
                {% endfor %}
            {% endpaginate %}
        </div>
    </div>
</main>