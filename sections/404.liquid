{% render 'stylesheet', name: '404' %}

<section class="not-found">
    <div class="container">
        <div class="not-found__wrapper">
            <div class="not-found__banner">
                {% if section.settings.banner_404 %}
                    {{ section.settings.banner_404 | image_url: width: 1400 | image_tag }}
                {% endif %}
            </div>
            <div class="not-found__content">
                {% if section.settings.title_404 %}
                    <h2>{{ section.settings.title_404 }}</h2>
                {% endif %}
               {% if section.settings.text_404 %}
                    <p>{{ section.settings.text_404 }}</p>
               {% endif %}

               {% if section.settings.button_text and section.settings.button_link %}
                    <a href="{{ section.settings.button_link }}" class="link-regular">{{ section.settings.button_text }} {% render "icon-arrow-top-right" %} </a>
               {% endif %}
            </div>
        </div>
    </div>
</section>
 

{% schema %}
{
    "name": "404",
    "settings": [
        {
            "type": "image_picker",
            "id": "banner_404",
            "label": "404 Image"
        },
        {
            "type": "text",
            "id": "title_404",
            "label": "404 title"
        },
        { 
            "type": "text",
            "id": "text_404",
            "label": "404 text"
        },
        {
            "type": "text",
            "id": "button_text",
            "label": "Button text"
        },
        {
            "type": "url",
            "id": "button_link",
            "label": "Button link"
        }
    ]
}
{% endschema %}